<%- include('partials/head') %> 
<%- include('partials/navbar') %> 

<main>
  <div class="card-group" style="display:grid;">
      <div class="card"style="margin:1em;">
        <div class="card-body">
          <h5 class="card-title">Profile</h5>
          <p class="card-text">
              Username : <%= object.username %> <br>
              Description : <%= object.Description %> <br>
              Email : <%= object.email %> <br>
          </p>
          <p class="card-text"><small class="text-muted">
              Last updated 3 mins ago
          </small>
          </p>
          <a href="/settings">
              <button type="button" class="btn btn-primary">Edit Profile</button>
          </a>
        </div>
      </div>
    </div>
    <h3>
      Recent Rooms Visited
    </h3>
    <div class="card-group">
      <% for (let i in object.Visits) { %> 
        <div class="card border-primary mb-3" style="min-width: 15em; margin:0.5em;">
          <div class="card">
            <div class="card-body text-primary">
              <h5 class="card-title"> <%= object.Visits[i].RoomID %>  </h5>
              <p class="card-text">
                <small class="text-muted">Visited at <br> <%= object.Visits[i].Date %>
                </small>
              </p>
            </div>
          </div>
        </div>
        <% if (i%3 === 0) { %> 
          <br>
        <% } %> 
      <% } %> 
    </div>
</main>

<%- include('partials/footer') %> 